---
import Layout from '../layouts/Layout.astro'
import logo from '../assets/logo-xs.svg'
import { Image } from 'astro:assets'
import '../styles/fonts.css'
---

<Layout title='alidos.de'>
  <nav class='flex justify-between items-center px-8 py-4 bg-[#111111] text-white'>
    <div>
      <a href='/'>
        <Image width='175' src={logo} alt='logo' />
      </a>
    </div>
    <div>
      <ul class='flex gap-8 font-semibold text-lg'>
        <li>
          <a class='hover:opacity-60' href='/shop'>Shop</a>
        </li>
        <li>
          <a class='opacity-60' href='#'>Company</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class='py-10 sm:py-12 lg:py-[60px] xl:py-[76px] 2xl:py-[100px] text-center bg-[#111111] text-white'>
    <h2 class='font-palatino italic leading-[1.1!important] pb-2 sm:pb-3 lg:pb-4 xl:pb-5 sm:text-xl xl:text-[1.625rem] tracking-[-0.01em]'>Company</h2>
    <h1 class='font-future font-extrabold text-5xl leading-[0.85!important] sm:text-[4.25rem] md:text-[5.0625rem] lg:text-8xl xl:text-[7.125rem] 2xl:text-[8.5rem]'>
      WELCOME TO
      <br />
       ALIDOS, INC.
    </h1>
  </div>
  <video aria-describedby='Company-Hero Loop 032323' preload='auto' playsinline src='/company.mp4' autoplay loop muted></video>
  <main class='bg-white px-5 md:px-8 lg:px-10'>
    <div class='mx-auto pt-10 md:pt-[60px] lg:pt-[76px] xl:pt-[100px] md:pb-5 xl:pb-8 w-full sm:w-[calc(10/12*100%-16px-10/12*16px)] xl:w-[calc(8/12*100%-16px-8/12*16px)] text-center'>
      <span class='font-helvetica leading-tight text-xl md:text-[1.375rem] md:leading-[1.2] lg:text-[1.8125rem] xl:text-[2.125rem] 2xl:text-5xl 2xl:tracking-[-0.02em] tracking-[-0.01em]'> ALIDOS, Inc. is a team comprised of the Alidos, Jordan and Converse brands driven by a shared purpose to leave an enduring impact.</span>
    </div>
  </main>
  <footer></footer>
</Layout>
